<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloud1"
    android:orientation="vertical"
    android:padding="36dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="48dp"
        android:text="Sign in"
        android:fontFamily="cursive"
        android:textSize="48dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_email"
        android:elevation="16sp"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingEnd="5dp"
        android:paddingStart="10dp"
        android:paddingTop="16dp">


        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/email"
            android:fontFamily="sans-serif"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingBottom="30dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/etPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/password"
                android:fontFamily="sans-serif"
                android:hint="Password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="6dp"
        android:fontFamily="sans-serif"
        android:text="Forgot password ?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_facebook"
            android:fontFamily="sans-serif"
            android:text="Sign in"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:elevation="16sp"
            android:id="@+id/button_login"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_facebook"
            android:fontFamily="sans-serif"
            android:text="Sign up"
            android:elevation="16sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:id="@+id/button_signup"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="#808080" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="OR" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="#808080" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_google"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_google"
        android:drawablePadding="24dp"
        android:drawableStart="@drawable/google"
        android:fontFamily="sans-serif"
        android:paddingStart="16dp"
        android:elevation="16sp"
        android:text="Sign in with Google"
        android:textAlignment="textStart"
        android:textAllCaps="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_facebook"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_facebook"
        android:drawablePadding="24dp"
        android:drawableStart="@drawable/facebook"
        android:fontFamily="sans-serif"
        android:paddingStart="16dp"
        android:elevation="16sp"
        android:text="Sign in with Facebook"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <!-- <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/twitter"
         android:background="@drawable/button_twitter"
         android:drawablePadding="24dp"
         android:drawableStart="@drawable/twitter"
         android:fontFamily="sans-serif"
         android:paddingStart="16dp"
         android:text="Sign in with Twitter"
         android:textAlignment="textStart"
         android:textAllCaps="false"
         android:textColor="#FFFFFF" />        -->


</LinearLayout>